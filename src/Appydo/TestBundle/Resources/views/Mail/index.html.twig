{% extends 'AppydoTestBundle::admin.html.twig' %}

{% block title "Mail" %}

{% block content %}
<div class="page-header">
    <h1>Mail</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Sent</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('mail_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif%}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="form-actions">
    <a class="btn btn-primary" href="{{ path('mail_new') }}">
        Create
    </a>
</div>
{% endblock %}