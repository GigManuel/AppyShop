{% extends 'AppydoQuizBundle::layout.html.twig' %}

{% block title %}
    Corbeille
{% endblock %}

{% block content %}
<!-- Top Content -->
<div id="top-content">
    <span class="rubrique">Gestionnaire de quiz</span>
    <a href="{{ path('manager_new') }}" class="add-quiz">ajouter un quiz</a>
</div>
<!-- List Content -->
<div id="list-content">

    {% for manager in entities %}
        <div class="item">
            <div class="meta-quiz">
                <span class="title-quiz"><a href="{{path('manager_show', {'id':manager.id})}}">Quiz n° {{manager.id}} : {{manager.name}}</a></span>
                <div class="desc-quiz">{{manager.description}} ( {{manager.count}} téléchargement(s) )</div>
            </div>

            <div class="tools-quiz">
                <div class="suppr-quiz"><a href="{{path('manager_delete', {'id':manager.id})}}"><span>supprimer</span></a></div>
                <div class="edit-quiz"><a href="{{path('manager_edit', {'id':manager.id})}}"><span>éditer</span></a></div>
                {% if manager.subjects|length %}<div class="export-quiz"><a href="{{path('zip', {'id':manager.id})}}"><span>exporter</span></a></div>{% endif %}
            </div>
        </div>
    {% endfor %}

</div>
</div>
{% endblock %}