{% extends 'AppydoQuizBundle::layout.html.twig' %}

{% block title %}
    Gestionnaire de quiz
{% endblock %}

{% block content %}

<form action="{{ path('manager_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    <!-- Top Content -->
    <div id="top-content">
        <span class="rubrique">Edition d'un quiz</span>
    </div>
    <div id="list-content">

    <label>Nom :</label> {{ form_widget(edit_form.name) }}
    <label>Description :</label> {{ form_widget(edit_form.description) }}
    <label>Corbeille : {{ form_widget(edit_form.hide) }}</label>

    {{ form_widget(edit_form._token) }}

    <p>
        <button class="next-step" type="submit">Edit</button>
        <a class="next-step back" href="{{ path('manager') }}">
            Retour
        </a>
    </p>
    </div>
</form>

{% endblock %}