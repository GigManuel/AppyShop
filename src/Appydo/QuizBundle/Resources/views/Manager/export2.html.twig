<script type="text/javascript">
    var good = 0;
    var bad  = 0;
    // var next = 1;
    function nextquizz(present) {
        var next = present+1;
        document.getElementById("quizz"+present).style.display="none";
        if (document.getElementById("quizz"+next))
            document.getElementById("quizz"+next).style.display="block";
        else
            total(document.myform.result);
    }
    function prevquizz(present) {
        var next = present-1;
        document.getElementById("quizz"+present).style.display="none";
        if (document.getElementById("quizz"+next))
            document.getElementById("quizz"+next).style.display="block";
        else
            total(document.myform.result);
    }
    function total(field) {
        document.getElementById("total").innerHTML = "";
        for (i = 0; i < field.length; i++) {
            if (field[i].checked==true) {
                // document.getElementById("total").innerHTML += field[i].value;
                if (field[i].getAttribute("correct")=="true") {
                    good++;
                    field[i].parentNode.style.background="green";
                } else {
                    bad++;
                    field[i].parentNode.style.background="red";
                }
            }
        }
        document.getElementById("total").innerHTML += "<p>Bonne(s) r&eacute;ponse(s) : "+good+"</p>";
        document.getElementById("total").innerHTML += "<p>Mauvaise(s) r&eacute;ponse(s) : "+bad+"</p>";
        good = 0;
        bad  = 0;
    }
</script>
