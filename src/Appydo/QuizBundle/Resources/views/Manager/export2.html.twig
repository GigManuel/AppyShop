<body>

  <div id="container">
    <header id="header">
      <h1><a href="#">Quiz</a></h1>
    </header>
    
    <div id="main" role="main" class="clearfix">
      
      <!-- Content Main -->
      <div id="content">
        <div id="total">
            {% for subject in subjects %}
                <h2>Question {{cpt}}</h2>
                <p>{{subject.description}}</p>
            {% endfor %}
        </div>
        <h1>{{ entity.name }}</h1>
        {% set cpt = 1 %}
        <form name="myform">

            {% for subject in subjects %}
            {% if cpt==1 %}
                <div id="quizz{{cpt}}">
            {% else %}
                <div id="quizz{{cpt}}" style="display: none;">
            {% endif %}
                <h2>Question {{cpt}}</h2>
                <h3>{{subject.name}}</h3>
                <p>{{subject.description}}</p>
                {% for item in subject.quizz %}
                {# list items:quizz.find("bySubject.id", subject.id).fetch(), as:'item' #}
                    <p><input name="result" type="checkbox" value="{{item.id}}" correct="{{item.correct?"true":"false"}}" /> {{item.name}}</p>
                {% endfor %}
                <input id="cpt" name="cpt" type="hidden" value="{{cpt}}" />
                <p>
                    <input type="button" value="Pr&eacute;c&eacute;dent" onclick="prevquizz({{cpt}});return false;" />
                    <input type="button" value="Suivant" onclick="nextquizz({{cpt}});return false;" />
                </p>
                {% set cpt = cpt+1 %}
                </div>
            {% endfor %}
            {#<p><input type="button" value="Valider" onclick="total(document.myform.result);return false;" /></p>#}

        </form>

        <p><a href="#">Recommencer</a></p>
      </div>
